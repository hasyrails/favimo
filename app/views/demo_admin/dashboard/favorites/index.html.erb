<div
  style="
  width: 100%;
  height: 100vh;
  background-color:#F5FFFA;
  "
>
  <div
  style="
  display: flex;
  "
  >
  <div>
    <div
    style="
    display: flex;
    position: fixed;
    top: 50px;
    left: 20vw;
    width: 60vw;
    margin-top: 1%;
    "
    >
      <div
      style="
      width: 50vw;
      margin-top: 6%;
      margin-left: 30%;
      margin-right: 1%;
      font-size: 20px;
      "
      >
        <p><%= @favorites.model_name.name %>モデル</p>
        <p
        style="margin-top: -5%;"
        >レコード</p>
      </div>
      <div
      style="
      width: 100vw;
      margin-top: 1%;
      margin-left: auto;
      margin-right: auto;
      "
      >
        <table 
        border="1">
          <thead
          class="table-dark"
          >
            <tr>
              <th>
                <div
                style="
                text-align: center;
                font-size: 20px;
                font-weight: bold;
                "
                >
                  <%= @model_name %>
                </div>
              </th>
            </tr>
          </thead>

          <% @column_names.each do |column_name|  %>
          <tr>
            <td>
              <div
              style="
              margin-left: 10px;
              margin-right: 10px;
              "
              >
              <%= column_name %>
              </div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div
    style="
    margin-top: 1%;
    text-align: center;
    width: 100vw;
    position: fixed;
    top: 30%;
    margin-left:auto;
    margin-right:auto;
    "
    >
      <table
      class="table" 
      border="1"
      >
        <thead
        class="table-dark"
        >
          <tr>
          <% @column_names.each do |column_name| %>
            <th>
              <%= column_name.truncate(10) %>
            </th>
          <% end %>
            <th
            style="
              width: 100px;
            "
            >
              <div
              style="
              text-align: center;
              font-size: 10px;
              "
              >
              レコード操作
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
        <% @favorites.each do |favorite| %>
          <tr>
          <% favorite.attributes.each do |key, value| %>
            <td>
              <%= value.to_s.truncate(20) %>
            </td>
          <% end %>
            <td>
              <div
              style="
              margin-left: 5px;
              margin-right: 5px;
              display: flex;
              "
              >
                <div
                style="
                margin-left: 5px;
                margin-right: 5px;
                "
                >
                <%= link_to demo_admin_dashboard_favorite_path(favorite) do %>
                  <i class="fa fa-info-circle fa-2x"></i>
                <% end %>
                </div>
                <div
                style="
                margin-left: 5px;
                margin-right: 5px;
                "
                >
                <%= link_to edit_demo_admin_dashboard_favorite_path(favorite) do %>
                  <i class="fa fa-pen fa-2x"></i>
                <% end %>
                </div>
                <div
                style="
                margin-left: 5px;
                margin-right: 5px;
                "
                >
                <%= link_to demo_admin_dashboard_favorite_path(favorite), method: :delete do %>
                  <i class="fa fa-trash fa-2x"></i>
                <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
     </table>
    <div>
      <%= paginate @favorites %>
    </div>
    </div>
  </div>
</div>
