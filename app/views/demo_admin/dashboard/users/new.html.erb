<div
  style="
  width: 100%;
  height: 100vh;
  background-color:#F5FFFA;
  "
>
  <div
  style="
  display: flex;
  "
  >
  <div>
    <div
    style="
    display: flex;
    position: fixed;
    top: 50px;
    left: 20vw;
    width: 60vw;
    margin-top: 1%;
    "
    >
      <div
      style="
      width: 50vw;
      margin-top: 6%;
      margin-left: 30%;
      margin-right: 1%;
      font-size: 20px;
      "
      >
        <p><%= @user.model_name.name %>モデル</p>
        <p
        style="margin-top: -5%;"
        >レコード</p>
        <p>[ 新規作成 ]</p>
      </div>
      <div
      style="
      width: 100vw;
      margin-top: 1%;
      margin-left: auto;
      margin-right: auto;
      "
      >
        <table 
        border="1">
          <thead
          class="table-dark"
          >
            <tr>
              <th>
                <div
                style="
                text-align: center;
                font-size: 20px;
                font-weight: bold;
                "
                >
                  <%= @model_name %>
                </div>
              </th>
            </tr>
          </thead>

          <% @column_names.each do |column_name|  %>
          <tr>
            <td>
              <div
              style="
              margin-left: 10px;
              margin-right: 10px;
              "
              >
              <%= column_name %>
              </div>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div
    style="
    margin-top: 1%;
    text-align: center;
    width: 100vw;
    position: fixed;
    top: 45%;
    margin-left:auto;
    margin-right:auto;
    "
    >
      <table
      class="table" 
      border="1"
      >
        <thead
        class="table-dark"
        >
          <tr>
          <% @column_names.each do |column_name| %>
            <th>
              <%= column_name.truncate(10) %>
            </th>
          <% end %>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%= @new_user_id %>
            </td>
            <% @update_attributes.each do |key, value| %>
            <td>
              <%= form_with model: [:demo_admin, :dashboard, @user] do |f| %>
                <div>
                  <%= f.text_field "#{key}", style: 'width: 75px;' %>
                </div>
              <% end %>
            </td>
            <% end %>
            <td>
              dummy
            </td>
          </tr>
        </tbody>
     </table>
     <%= form_with model: [:demo_admin, :dashboard, @user] do |f| %>
        <div
        style="margin-top: 5px;"
        >
          <%= f.submit "作成する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
