<div class="video-index-page">
  <%= render "partial/videos_page_navbar" %>

  <div class="video-swipe">
    <div class="video-swipe--status">
      <i class="fa fa-times"></i>
      <i class="fa fa-heart"></i>
    </div>

    <div class="video-swipe--cards">
      <% @my_videos.each do |my_video| %>
        <div 
        class="video-swipe--card"
        id="<%= my_video.id %>"
        >
          <iframe width="480" height="200" src="https://www.youtube.com/embed/<%= my_video.video_id %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
          </iframe>
          <div class="video-info" style="margin-top:10%;font-size:10px;color:black;">
            <div id="video-title">
              <%= my_video.title %>
            </div>
            <div>
              <%= my_video.description %>
            </div>
            <div>
              <%= my_video.published_at %>
            </div>
            <div>
              <%= my_video.channel_id %>
            </div>
            <div>
              <%= my_video.channel_title %>
            </div>
            <div>
              <%= image_tag my_video.thumbnail_url %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="no-user">近くにお相手がいません</div>
    </div>

    <div class="video-swipe--buttons">
      <button id="myvideo-dislike"><i class="fas fa-times fa-2x"></i></button>
      <button id="myvideo-like"><i class="fas fa-heart fa-2x"></i></button>
    </div>
  </div>

  <%= form_with url:'/youtube/videos', method: :get, local: true do |f| %>
    <%= f.text_field :keyword %>
    <%= f.submit 'Search' %> <%= link_to 'Clear',youtube_myvideos_path %>
  <% end %>
  
</div>
