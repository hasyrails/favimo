<div
  style="
  width: 100%;
  height: 100vh;
  background-color:#F5FFFA;
  "
>
  <div
  style="
  display: flex;
  "
  >
  <div
  >
    <div
    style="
    font-size: 32px;
    font-weight: bold;
    text-align: center;
    "
    >
      DataBase Tables
    </div>
    <div
    style="
    display: flex;
    flex-wrap: wrap;
    margin-left: 30px;
    margin-right: 30px;
    "
    >
      <% @table_names.zip(@columns) do |table_name, columns| %>
        <div
        style="
        display: block;
        margin-top: 30px;
        margin-left: 15px;
        margin-right: 15px;
        "
        >
          <div
          style="
          font-size: 16px;
          font-weight: bold;
          border: 2px solid;
          width: 150px;
          text-align: center;
          "
          >
            <%= table_name %>
          </div>
          <div
          style="
          width: 150px;
          border: 1px solid;
          "
          >
            <% columns.each do |column| %>
              <div
              style="
              border: 1px solid;
              "
              >
                <div
                style="
                margin-left: 5px;
                "
                >
                  <%= column.name %>
                </div>
              </div>
            <% end %>
          </div>
          
        </div>
      <% end %>
    </div>
  </div>
  </div>
</div>
